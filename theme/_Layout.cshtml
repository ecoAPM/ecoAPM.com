<!doctype html>
<html lang="en">

    <head>
        @await Html.PartialAsync("_head")
    </head>

    <body class="min-vh-100 d-flex flex-column">
        <header>
            @await Html.PartialAsync("_navigation")
        </header>

        <main class="mb-5">
            @RenderBody()
        </main>

        <footer class="navbar navbar-dark bg-dark text-light mt-auto">
            @await Html.PartialAsync("_footer")
        </footer>

        <script>
            document.querySelectorAll('table').forEach(t => t.className += " table table-bordered table-striped table-hover ");
        </script>

